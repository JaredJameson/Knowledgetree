# KnowledgeTree - Environment Variables Template
# Copy this file to .env and fill in your values

# ============================================================================
# Database Configuration
# ============================================================================
DB_HOST=localhost
DB_PORT=5437
DB_USER=knowledgetree
DB_PASSWORD=your_secure_password_here
DB_NAME=knowledgetree

# PostgreSQL connection string
DATABASE_URL=postgresql+asyncpg://${DB_USER}:${DB_PASSWORD}@${DB_HOST}:${DB_PORT}/${DB_NAME}

# ============================================================================
# Backend Configuration
# ============================================================================
BACKEND_HOST=0.0.0.0
BACKEND_PORT=8000
DEBUG=True

# Secret key for JWT tokens (generate with: openssl rand -hex 32)
SECRET_KEY=your_secret_key_here_generate_with_openssl_rand_hex_32

# JWT token expiration (in minutes)
ACCESS_TOKEN_EXPIRE_MINUTES=15
REFRESH_TOKEN_EXPIRE_DAYS=7

# CORS allowed origins (comma-separated)
CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# ============================================================================
# Frontend Configuration
# ============================================================================
VITE_API_URL=http://localhost:8000
VITE_APP_NAME=KnowledgeTree
VITE_APP_VERSION=0.1.0

# ============================================================================
# BGE-M3 Embeddings Configuration
# ============================================================================
EMBEDDING_MODEL=BAAI/bge-m3
EMBEDDING_DIMENSIONS=1024
EMBEDDING_DEVICE=cpu
# Set to 'cuda' if you have GPU available

# HuggingFace cache directory
HF_HOME=/app/models

# ============================================================================
# PDF Processing Configuration
# ============================================================================
CHUNK_SIZE=1000
CHUNK_OVERLAP=200
MAX_FILE_SIZE_MB=50

# Upload directory
UPLOAD_DIR=./uploads

# ============================================================================
# AI Services
# ============================================================================

# Anthropic Claude API
ANTHROPIC_API_KEY=your_anthropic_api_key_here
ANTHROPIC_MODEL=claude-3-5-sonnet-20241022

# Firecrawl API (Web Crawling)
FIRECRAWL_API_KEY=your_firecrawl_api_key_here

# Google Custom Search API (Web Search)
GOOGLE_CSE_API_KEY=your_google_cse_api_key_here
GOOGLE_CSE_ID=your_custom_search_engine_id_here

# Alternative: Serper.dev API
SERPER_API_KEY=your_serper_api_key_here

# ============================================================================
# Redis (Optional - for caching and job queue)
# ============================================================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# ============================================================================
# Email Configuration (Optional - for user verification)
# ============================================================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password_here
SMTP_FROM=noreply@knowledgetree.com

# ============================================================================
# Stripe Payment Integration (Sprint 4+)
# ============================================================================
STRIPE_PUBLIC_KEY=your_stripe_public_key_here
STRIPE_SECRET_KEY=your_stripe_secret_key_here
STRIPE_WEBHOOK_SECRET=your_stripe_webhook_secret_here

# ============================================================================
# Monitoring & Analytics (Production)
# ============================================================================
SENTRY_DSN=your_sentry_dsn_here
LOGR OCKET_APP_ID=your_logrocket_app_id_here

# ============================================================================
# Feature Flags
# ============================================================================
ENABLE_WEB_CRAWLING=False
ENABLE_AI_INSIGHTS=False
ENABLE_AGENTIC_WORKFLOWS=False
